<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyApplication2" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <!-- <item name="colorPrimary">@color/my_dark_primary</item> -->
        <item name="colorPrimaryVariant">@color/themeBlue</item>
        <item name="colorPrimary">@color/themeBlue</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorSecondary">@color/themeLightBlue</item>
        <item name="colorSecondaryVariant">@color/theme_logo_grey</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:textSize">13sp</item>
        <item name="textFillColor">@color/themeBlue</item>
        <item name="iconSize">15dp</item>
    </style>

    <style name="Theme.MyApplication2" parent="Base.Theme.MyApplication2">
        <item name="textFillColor">@color/themeBlue</item>
    </style>

    <style name="Buttons" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="textFillColor">@color/themeBlue</item>
        <item name="background">@drawable/purpose_btn</item>
    </style>

    <style name="NavigationBar" parent="Base.Theme.MyApplication2">
        <item name="android:textSize">10sp</item>
        <item name="minWidth">0dp</item>
        <item name="textFillColor">@color/themeBlue</item>
        <item name="minHeight">0dp</item>
    </style>

    <style name="animation">
        <item name="android:windowEnterAnimation">@android:anim/linear_interpolator</item>
        <item name="android:windowExitAnimation">@android:anim/overshoot_interpolator</item>
    </style>
</resources>