<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Explore">

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/exploreTopNav"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@color/themeLightBlue"
        app:itemIconTint="@color/white"
        app:itemRippleColor="@color/white"
        app:itemActiveIndicatorStyle="@color/themeWhite"
        app:itemTextAppearanceActive="@color/themeLightBlue"
        app:layout_constraintEnd_toEndOf="parent"
        android:backgroundTint="@color/themeLightBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:menu="@menu/explore_top_menu" />

    <FrameLayout
        android:id="@+id/exploreMainContainer"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exploreTopNav" />


</androidx.constraintlayout.widget.ConstraintLayout>